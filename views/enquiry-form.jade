extends layout

block content
  form(action='/enquire' method='post' novalidate)
    h1 Investment enquiry
    fieldset.form-group
      legend.form-label-bold Your details
      div.form-group(class=errors && errors.name ? 'error' : '')
        label.form-label(for='name') Your full name
          if errors && errors.name
            span.error-message= errors.name.msg
        input#name.form-control(type='text' name='name' required)
      div.form-group(class=errors && errors['job-title'] ? 'error' : '')
        label.form-label(for='job-title') Job title
          if errors && errors['job-title']
            span.error-message= errors['job-title'].msg
        input#job-title.form-control(type='text' name='job' required)
      div.form-group(class=errors && errors.email ? 'error' : '')
        label.form-label(for='email') Email address
          if errors && errors.email
            span.error-message= errors.email.msg
        input#email.form-control(type='email' name='email' required)
      div.form-group(class=errors && errors.phone ? 'error' : '')
        label.form-label(for='phone') Telephone number
          if errors && errors.phone
            span.error-message= errors.phone.msg
        input#phone.form-control(type='text' name='phone' required)
    fieldset.form-group
      legend.form-label-bold Your company details
      div.form-group(class=errors && errors['company-name'] ? 'error' : '')
        label.form-label(for='company-name') Company name
          if errors && errors['company-name']
            span.error-message= errors['company-name'].msg
        input#company-name.form-control(type='text' name='company-name' required)
      div.form-group(class=errors && errors['company-address'] ? 'error' : '')
        label.form-label(for='company-address') Company address
          if errors && errors['company-address']
            span.error-message= errors['company-address'].msg
        textarea#company-address.form-control(type='company-address' required)
      fieldset.form-group(class=errors && errors['company-type'] ? 'error' : '')
        legend Company type
        if errors && errors['company-type']
          div.error-message= errors['company-type'].msg
        label.block-label(for='company-type')
          input#company-type(name='org-type' type='radio' value='Company or Organisation' required)
          | Company or Organisation
        label.block-label(for='type-govt')
          input#type-govt(name='org-type' type='radio' value='Government Department' required)
          | Government Department
        label.block-label(for='type-individual')
          input#type-individual(name='org-type' type='radio' value='Individual' required)
          | Individual
        label.block-label(for='type-intermediary')
          input#type-intermediary(name='org-type' type='radio' value='Intermediary' required)
          | Intermediary
        label.block-label(for='type-student')
          input#type-student(name='org-type' type='radio' value='Student' required)
          | Student
      div.form-group(class=errors && errors['company-based'] ? 'error' : '')
        label.form-label(for='company-based') Where is your company based?
          if errors && errors['company-based']
            span.error-message= errors['company-based'].msg
        input#company-based.form-control(type='text' name='company-based' required)
      div.form-group(class=errors && errors.industry ? 'error' : '')
        label.form-label(for='industry') Primary industry
          if errors && errors.industry
            span.error-message= errors.industry.msg
        input#industry.form-control(type='text' name='industry' required)
      div.form-group
        label.form-label(for='turnover') Annual turnover (optional)
        input#turnover.form-control(type='text' name='turnover')
      div.form-group
        label.form-label(for='employees') Number of employees (optional)
        input#employees.form-control(type='text' name='employees')
    fieldset.form-group(class=errors && errors['enquiry-summary'] ? 'error' : '')
      legend.form-label-bold Your enquiry
      label.form-label(for='enquiry-summary') Provide a brief summary of the assistance you require
        if errors && errors['enquiry-summary']
          span.error-message= errors['enquiry-summary'].msg
      p.form-hint Limit your summary to 250 words
      textarea#enquiry-summary.form-control(type='enquiry-summary' required)
    fieldset.form-group(class=errors && errors['heard-about'] ? 'error' : '')
      legend.form-label-bold How did you hear about UK Trade & Investment?
      if errors && errors['heard-about']
        div.error-message= errors['heard-about'].msg
      label.block-label(for='heard-ukti')
        input#heard-ukti(name='heard-about' type='radio' value='Contact with UKTI staff member' required)
        | Contact with UKTI staff member
      label.block-label(for='heard-govuk')
        input#heard-govuk(name='heard-about' type='radio' value='GOV.UK website' required)
        | GOV.UK website
      label.block-label(for='heard-press')
        input#heard-press(name='heard-about' type='radio' value='Press article/advert' required)
        | Press article/advert
      label.block-label(for='heard-intermediary')
        input#heard-intermediary(name='heard-about' type='radio' value='Intermediary' required)
        | Intermediary (for example a trade association, chamber or bank)
      label.block-label(for='heard-social')
        input#heard-social(name='heard-about' type='radio' value='Social Media' required)
        | Social Media
      label.block-label(for='heard-personal')
        input#heard-personal(name='heard-about' type='radio' value='Personal reference' required)
        | Personal reference
      label.block-label(for='heard-other')
        input#heard-other(name='heard-about' type='radio' value='Other' required)
        | Other
    fieldset.form-group
      legend.form-label-bold Would you be happy to be contacted again?
      p Please select all that apply
      label.block-label(for='dpa-ukti')
        input#dpa-ukti(name='dpa' type='checkbox' value='By UK Trade & Investment' required)
        | By UK Trade & Investment
      label.block-label(for='dpa-partners')
        input#dpa-partners(name='dpa' type='checkbox' value='By external UK Trade & Investment partners' required)
        | By external UK Trade & Investment partners
      label.block-label(for='dpa-overseas')
        input#dpa-overseas(name='dpa' type='checkbox' value='By overseas providers for UK Trade & Investment services' required)
        | By overseas providers for UK Trade & Investment services
    .form-group
      button.button(type='submit') Submit enquiry
