mixin dataRow(field, key)
  if data[field]
    tr: td(colspan='2' height='15')
    tr
      th(width='35%' valign='top' align='left')
        +text(16, 500, '#6f777b')= t(key)
      td(width='65%' valign='top')
        +text= data[field]
    tr: td(colspan='2' height='15')
    tr: td(colspan='2' height='1' bgcolor='#6f777b')

if data
  tr: td
    +tbl
      tr: td(colspan='2' height='10')
      tr: td(colspan='2')
        h2(style='margin:0;padding:0;')
          +text(19, 700)= t('pages.confirm.enquiry-table.title')
      tr: td(colspan='2' height='20')
      tr: td(colspan='2' height='1' bgcolor='#6f777b')
      +dataRow('enquiry-reason', 'pages.confirm.enquiry-table.headers.reason')
      +dataRow('enquiry-description', 'pages.confirm.enquiry-table.headers.description')
  tr: td
    +tbl
      tr: td(colspan='2' height='30')
      tr: td(colspan='2')
        h2(style='margin:0;padding:0;')
          +text(19, 700)= t('pages.confirm.personal-details-table.title')
      tr: td(colspan='2' height='20')
      tr: td(colspan='2' height='1' bgcolor='#6f777b')
      +dataRow('fullname', 'pages.confirm.personal-details-table.headers.fullname')
      +dataRow('email', 'pages.confirm.personal-details-table.headers.email')
      +dataRow('phone', 'pages.confirm.personal-details-table.headers.phone')
  tr: td
    +tbl
      tr: td(colspan='2' height='30')
      tr: td(colspan='2')
        h2(style='margin:0;padding:0;')
          +text(19, 700)= t('pages.confirm.org-details-table.title')
      tr: td(colspan='2' height='20')
      tr: td(colspan='2' height='1' bgcolor='#6f777b')
      +dataRow('country', 'pages.confirm.org-details-table.headers.country')
      +dataRow('org-name', 'pages.confirm.org-details-table.headers.org-name')
      +dataRow('org-type', 'pages.confirm.org-details-table.headers.org-type')
      +dataRow('annual-turnover', 'pages.confirm.org-details-table.headers.annual-turnover')
      +dataRow('no-employees', 'pages.confirm.org-details-table.headers.no-employees')
      +dataRow('sector', 'pages.confirm.org-details-table.headers.sector')
      +dataRow('exported-before', 'pages.confirm.org-details-table.headers.exported-before')
      if data['org-address-street']
        tr: td(colspan='2' height='15')
        tr
          th(width='35%' valign='top' align='left')
            +text(16, 500, '#6f777b')= t('pages.confirm.org-details-table.headers.org-address')
          td(width='65%' valign='top')
            +text #{data['org-address-house-number']} #{data['org-address-street']},
            br
            +text #{data['org-address-town']},
            if data['org-address-county']
              br
              +text #{data['org-address-county']}, 
            br
            +text= data['org-address-postcode']
        tr: td(colspan='2' height='15')
        tr: td(colspan='2' height='1' bgcolor='#6f777b')
